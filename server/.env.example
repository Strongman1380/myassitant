# Copy this to .env and add your actual values

# Server Configuration
NODE_ENV=development
PORT=3001

# OpenAI API (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Supabase (Required for memory features)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google Calendar OAuth (Optional - for calendar features)
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Calendar Token (Set this after first OAuth authorization)
# Run the app locally first, authorize via browser, then copy the token from console logs
GOOGLE_TOKEN={"access_token":"...","refresh_token":"...","scope":"...","token_type":"Bearer","expiry_date":...}

# Production Deployment URLs
BASE_URL=https://your-backend.onrender.com
GOOGLE_REDIRECT_URI=https://your-backend.onrender.com/api/calendar/oauth-callback
